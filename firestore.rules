rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow each authenticated user full read/write access to their own logs
    match /users/{userId}/logs/{logId} {
      allow read:  if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // (Optional) Allow everyone to read global stats
    match /stats/{statDoc=**} {
      allow read: if true;
    }

    // Allow a user to read any other user's basic profile
    match /users/{userId} {
      allow read: if request.auth != null;
    }
  }
}
